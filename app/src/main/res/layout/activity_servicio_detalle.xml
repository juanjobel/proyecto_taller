<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Detalles.ServicioDetalle"
    android:orientation="vertical"
    android:background="#454545">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#343434"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/matricula_coche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#FFF400"
                android:gravity="center"
                android:text="Matrícula"
                android:layout_marginHorizontal="5dp"/>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/tipo"
                            android:text="Tipo Servicio"
                            android:textColor="#FFF400"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"/>
                        <EditText
                            android:id="@+id/sistema"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:text="Sistema"
                            android:textColor="#FFF400"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <Spinner
                            android:id="@+id/spinnerTipo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="#787878"
                            android:textColorHint="#fff400"
                            android:textColor="#fff400"
                            android:hint="Tipo"/>
                        <Spinner
                            android:id="@+id/spinnerSistema"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="#787878"
                            android:textColorHint="#fff400"
                            android:textColor="#fff400"
                            android:hint="Sistema"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/fecha_inicio"
                            android:text="Fecha de Inicio"
                            android:textColor="#FFF400"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"/>
                        <EditText
                            android:id="@+id/fecha_fin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:text="Fecha de Fin"
                            android:textColor="#FFF400"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/presupuesto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:text="Presupuesto"
                            android:textColor="#FFF400"
                            android:textSize="20dp" />
                        <EditText
                            android:id="@+id/pagado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pagado"
                            android:layout_margin="5dp"
                            android:textColor="#FFF400"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/nombre_cliente"
                            android:text="Nombre Cliente"
                            android:textColor="#FFF400"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"/>
                        <EditText
                            android:id="@+id/movil_cliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Móvil"
                            android:layout_margin="5dp"
                            android:textColor="#FFF400"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <EditText
                        android:id="@+id/estado"
                        android:text="Estado"
                        android:layout_margin="5dp"
                        android:textColor="#FFF400"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20dp"/>
                        <Spinner
                            android:id="@+id/spinnerEstado"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#787878"
                            android:hint="Estado"
                            android:layout_margin="5dp"
                            android:textColor="#fff400"
                            android:textColorHint="#fff400" />


                        <EditText
                            android:id="@+id/descripcion"
                            android:text="Descripción"
                            android:textColor="#FFF400"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"/>

                    </LinearLayout>
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:src="@android:drawable/ic_menu_save" />



                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>
            <ImageView
                android:id="@+id/foto_servicio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:background="#ddd"
                android:src="@drawable/ruedas_dentadas"/>
        </LinearLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>