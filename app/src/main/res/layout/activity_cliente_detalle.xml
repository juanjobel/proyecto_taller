<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalles.ClienteDetalle"
    android:orientation="vertical"
    android:background="#454545">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nombreCliente"
        android:layout_margin="5dp"
        android:enabled="false"
        android:textColor="#fff400"
        android:text="Nombre"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apellido1Cliente"
            android:layout_margin="5dp"
            android:enabled="false"
            android:textColor="#fff400"
            android:layout_weight="1"
            android:text="Apellido1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_margin="5dp"
            android:id="@+id/apellido2Cliente"
            android:textColor="#fff400"
            android:layout_weight="1"
            android:text="Apellido2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telefonoCliente"
            android:layout_margin="5dp"
            android:enabled="false"
            android:layout_weight="1"
            android:textColor="#fff400"
            android:inputType="phone"
            android:text="Teléfono"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/documentoCliente"
            android:layout_margin="5dp"
            android:enabled="false"
            android:layout_weight="1"
            android:textColor="#fff400"
            android:text="Documento"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/direccionCliente"
        android:enabled="false"
        android:textColor="#fff400"
        android:text="Dirección"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_save" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/sym_action_chat" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerVehiculos"
        android:layout_height="match_parent"
        tools:ignore="InvalidId"></android.support.v7.widget.RecyclerView>

</LinearLayout>