<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalles.ClienteDetalle"
    android:orientation="vertical"
    android:background="#454545">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detalleMatricula"
        android:layout_margin="5dp"
        android:textColor="#fff400"
        android:text="Matrícula"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detalleMarcaCoche"
            android:textColor="#fff400"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Marca"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detalleModeloCoche"
            android:textColor="#fff400"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Modelo"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detalleNum_bastidor"
            android:textColor="#fff400"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Número de Bastidor"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detalleNombreCliente"
            android:textColor="#fff400"
            android:layout_weight="1"
            android:text="Nombre Cliente"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detalleMovilCliente"
            android:textColor="#fff400"
            android:layout_weight="1"
            android:text="Movil Cliente"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:src="@android:drawable/ic_menu_save" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/detalleImagenCoche"
        android:src="@drawable/coche"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerVehiculos"
        android:layout_height="match_parent"
        tools:ignore="InvalidId"></android.support.v7.widget.RecyclerView>

</LinearLayout>
    </ScrollView>